<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stopwatch_fragment">

    <ImageButton
        android:id="@+id/stopwatch_start"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="68dp"
        android:background="#000000"
        android:contentDescription="@string/stopwatchh"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch_count" />

    <ImageButton
        android:id="@+id/stopwatch_stop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="68dp"
        android:background="#000000"
        android:contentDescription="@string/stopwatch_stop"
        android:src="@drawable/ic_baseline_stop_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopwatch_count"
        app:layout_constraintVertical_bias="1.0" />

    <Chronometer
        android:id="@+id/stopwatch_count"
        android:layout_width="260sp"
        android:layout_height="90sp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="357dp"
        android:format="00:00:00"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>